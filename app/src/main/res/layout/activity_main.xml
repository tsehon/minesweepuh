<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flag_icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:width="64dp"
        android:height="64dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/flag"
        android:textAlignment="center"
        android:textColor="#FF5252"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.247"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.431" />

    <TextView
        android:id="@+id/num_flags"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:width="64dp"
        android:height="64dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="4"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/gridLayout0"
        app:layout_constraintStart_toEndOf="@+id/flag_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.43" />

    <TextView
        android:id="@+id/clock_icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:width="64dp"
        android:height="64dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/clock"
        android:textAlignment="center"
        android:textColor="#78909C"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.604"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.431" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:width="64dp"
        android:height="64dp"
        android:gravity="center_horizontal|center_vertical"
        android:text=""
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/clock_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.433" />

    <GridLayout
        android:id="@+id/gridLayout0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></GridLayout>

    <TextView
        android:id="@+id/modeSwitch"
        android:layout_width="286dp"
        android:layout_height="63dp"
        android:text="@string/pick"
        android:textAlignment="center"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout0"
        app:layout_constraintVertical_bias="0.559" />

</androidx.constraintlayout.widget.ConstraintLayout>